// -*- c++ -*-

#ifndef _LIBCPP_CSTRING
#define _LIBCPP_CSTRING

#include <cstddef>

namespace std {
	extern "C" {

	// copying functions
	void* memcpy(void* s1, const void* s2, std::size_t n);
	void* memmove(void* s1, const void* s2, std::size_t n);
	char* strcpy(char* s1, const char* s2);
	char* strncpy(char* s1, const char* s2, std::size_t n);

	// concatenation functions
	char* strcat(char* s1, const char* s2);
	char* strncat(char* s1, const char* s2, std::size_t n);

	// comparison functions
	int memcmp(const void* s1, const void* s2, std::size_t n);
	int strcmp(const char* s1, const char* s2);
	int strncmp(const char* s1, const char* s2, std::size_t n);

	// search functions
	void* memchr(const void* s, int c, std::size_t n);
	char* strchr(const char* s, int c);

	// miscellaneous functions
	void* memset(void* s, int c, std::size_t n);
	char* strerror(int errnum);
	std::size_t strlen(const char* s);
	}
} // namespace std

#endif
